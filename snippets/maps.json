{
  "map": {
      "*": {
        "general": [{
          "responsive": true,
          "keepLayerOrder": true
        }],
        
        "legend": [{
          "show": true,
          "position": "Bottom",
          "showTitle": false,
          "titleText": "",
          "fontColor": { "solid": { "color": "#666666" } },
          "fontFamily": "Segoe UI",
          "fontSize": 10
        }],
        
        "dataPoint": [{
          "defaultColor": { "solid": { "color": "#118DFF" } },
          "showAllDataPoints": true,
          "fill": { "solid": { "color": "#118DFF" } }
        }],
        
        "dataLabels": [{
          "show": false,
          "color": { "solid": { "color": "#000000" } },
          "labelDisplayUnits": 0,
          "labelPrecision": null,
          "fontSize": 11,
          "fontFamily": "Segoe UI"
        }],
        
        "categoryLabels": [{
          "show": true,
          "fontSize": 10,
          "fontFamily": "Segoe UI",
          "color": { "solid": { "color": "#666666" } }
        }],
        
        "mapControls": [{
          "autoZoom": true,
          "zoomButtons": true,
          "lasso": true
        }],
        
        "mapStyles": [{
          "mapTheme": "road",
          "labelStyle": "minimal"
        }],
        
        "bubbles": [{
          "bubbleSize": 100
        }],
        
        "heatMap": [{
          "show": false,
          "radius": 10
        }],
        
        "background": [{
          "show": false,
          "color": { "solid": { "color": "#FFFFFF" } },
          "transparency": 0
        }],
        
        "title": [{
          "show": false,
          "fontColor": { "solid": { "color": "#000000" } },
          "background": { "solid": { "color": "#FFFFFF" } },
          "alignment": "left",
          "fontSize": 12,
          "fontFamily": "Segoe UI Semibold"
        }],
        
        "visualHeader": [{
          "show": true,
          "foreground": { "solid": { "color": "#000000" } },
          "background": { "solid": { "color": "#FFFFFF" } }
        }],
        
        "visualTooltip": [{
          "titleFontColor": { "solid": { "color": "#000000" } },
          "valueFontColor": { "solid": { "color": "#000000" } },
          "background": { "solid": { "color": "#FFFFFF" } },
          "transparency": 10,
          "fontSize": 12,
          "fontFamily": "Segoe UI"
        }],
        
        "visualBorder": [{
          "show": false,
          "color": { "solid": { "color": "#CCCCCC" } },
          "radius": 0,
          "width": 1
        }]
      }
    },
    
    "filledMap": {
      "*": {
        "general": [{
          "responsive": true
        }],
        
        "legend": [{
          "show": true,
          "position": "Bottom",
          "fontColor": { "solid": { "color": "#666666" } },
          "fontSize": 10
        }],
        
        "dataColors": [{
          "diverging": false,
          "startColor": { "solid": { "color": "#deefff" } },
          "centerColor": { "solid": { "color": "#118DFF" } },
          "endColor": { "solid": { "color": "#004578" } },
          "minColor": { "solid": { "color": "#deefff" } },
          "maxColor": { "solid": { "color": "#118DFF" } }
        }],
        
        "dataLabels": [{
          "show": false,
          "color": { "solid": { "color": "#000000" } },
          "fontSize": 11
        }],
        
        "categoryLabels": [{
          "show": true,
          "color": { "solid": { "color": "#666666" } },
          "fontSize": 10
        }],
        
        "mapControls": [{
          "autoZoom": true,
          "zoomButtons": true,
          "lasso": true
        }],
        
        "mapStyles": [{
          "mapTheme": "road"
        }],
        
        "visualHeader": [{
          "show": true
        }],
        
        "title": [{
          "show": false
        }]
      }
    }
  },
  
  "_comments": {
    "description": "Максимально повний набір параметрів для Map, Filled Map, ArcGIS, Shape Map",
    "usage": "Copy 'map' object in visualStyles of your theme for Bubble Maps, 'filledMap' for Filled Map/Choropleth",
    "howToUse": "{ \"visualStyles\": { ...paste_here... } }",
    "note": "Copy 'map' для Bubble Map, 'filledMap' для Filled Map/Choropleth",
    "mapTheme": "road | aerial | dark | light",
    "labelStyle": "minimal | compact | detailed",
    "autoZoom": "true = автоматичне масштабування до даних",
    "zoomButtons": "true = показувати +/- кнопки zoom",
    "lasso": "true = lasso selection tool",
    "bubbleSize": "10-200: розмір бульбашок на карті",
    "heatMap": "Density map режим",
    "radius": "1-100: радіус heat map point",
    "diverging": "true = 3 кольори (min-center-max), false = 2 кольори (min-max)",
    "note": "Shape Map та ArcGIS Maps використовують подібні параметри"
  }
}
