{
  "waterfallChart": {
      "*": {
        "general": [{
          "responsive": true,
          "keepLayerOrder": true
        }],
        
        "legend": [{
          "show": true,
          "position": "Bottom",
          "showTitle": false,
          "titleText": "",
          "fontColor": { "solid": { "color": "#666666" } },
          "fontFamily": "Segoe UI",
          "fontSize": 10
        }],
        
        "sentimentColors": [{
          "increaseColor": { "solid": { "color": "#22D448" } },
          "decreaseColor": { "solid": { "color": "#D61128" } },
          "totalColor": { "solid": { "color": "#118DFF" } },
          "otherColor": { "solid": { "color": "#9EA3A3" } }
        }],
        
        "categoryAxis": [{
          "show": true,
          "axisColor": { "solid": { "color": "#CCCCCC" } },
          "fontColor": { "solid": { "color": "#666666" } },
          "fontSize": 11,
          "fontFamily": "Segoe UI",
          "showTitle": false,
          "titleText": "",
          "titleColor": { "solid": { "color": "#000000" } },
          "titleFontSize": 12,
          "titleFontFamily": "Segoe UI Semibold",
          "concatenateLabels": false,
          "innerPadding": 20
        }],
        
        "valueAxis": [{
          "show": true,
          "axisColor": { "solid": { "color": "#CCCCCC" } },
          "fontColor": { "solid": { "color": "#666666" } },
          "fontSize": 11,
          "fontFamily": "Segoe UI",
          "showTitle": false,
          "titleText": "",
          "titleColor": { "solid": { "color": "#000000" } },
          "titleFontSize": 12,
          "axisScale": "linear",
          "start": null,
          "end": null,
          "labelDisplayUnits": 0,
          "labelPrecision": null,
          "gridlineShow": true,
          "gridlineColor": { "solid": { "color": "#E5E5E5" } },
          "gridlineThickness": 1,
          "gridlineStyle": "solid"
        }],
        
        "dataLabels": [{
          "show": false,
          "color": { "solid": { "color": "#000000" } },
          "labelDisplayUnits": 0,
          "labelPrecision": null,
          "fontSize": 11,
          "fontFamily": "Segoe UI",
          "labelPosition": "InsideEnd",
          "showAll": true
        }],
        
        "connectors": [{
          "show": true,
          "color": { "solid": { "color": "#CCCCCC" } },
          "thickness": 1
        }],
        
        "breakdown": [{
          "maxBreakdowns": 10
        }],
        
        "plotArea": [{
          "transparency": 0
        }],
        
        "background": [{
          "show": false,
          "color": { "solid": { "color": "#FFFFFF" } },
          "transparency": 0
        }],
        
        "title": [{
          "show": false,
          "fontColor": { "solid": { "color": "#000000" } },
          "background": { "solid": { "color": "#FFFFFF" } },
          "alignment": "left",
          "fontSize": 12,
          "fontFamily": "Segoe UI Semibold"
        }],
        
        "visualHeader": [{
          "show": true,
          "foreground": { "solid": { "color": "#000000" } },
          "background": { "solid": { "color": "#FFFFFF" } }
        }],
        
        "visualTooltip": [{
          "titleFontColor": { "solid": { "color": "#000000" } },
          "valueFontColor": { "solid": { "color": "#000000" } },
          "background": { "solid": { "color": "#FFFFFF" } },
          "transparency": 10,
          "fontSize": 12,
          "fontFamily": "Segoe UI"
        }],
        
        "visualBorder": [{
          "show": false,
          "color": { "solid": { "color": "#CCCCCC" } },
          "radius": 0,
          "width": 1
        }]
      }
    }
  },
  
  "_comments": {
    "description": "Максимально повний набір параметрів для Waterfall Chart",
    "usage": "Copy 'waterfallChart' object in visualStyles of your theme",
    "howToUse": "{ \"visualStyles\": { ...paste_here... } }",
    "sentimentColors": "Кольори для increase/decrease/total/other значень",
    "increaseColor": "Колір для позитивних змін (зазвичай зелений)",
    "decreaseColor": "Колір для негативних змін (зазвичай червоний)",
    "totalColor": "Колір для total bars (зазвичай синій)",
    "otherColor": "Колір для інших категорій",
    "connectors": "Лінії між стовпцями",
    "thickness": "1-6: товщина connector lines",
    "maxBreakdowns": "1-50: макс кількість breakdown категорій",
    "innerPadding": "0-50: spacing між bars",
    "labelPosition": "InsideEnd | InsideCenter | InsideBase | OutsideEnd"
  }
}
